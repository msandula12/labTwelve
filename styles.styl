body
	background-color #00c5cd
	padding 20px 0px
	font-family Geneva
#toDoList
	background-color white
	width 60%
	height 100%
	margin 0 auto
	padding 30px
	border 5px solid #088da5
	border-radius 20px
h1 
	text-align center
	font-family 'Indie Flower', cursive
	font-size 3.5em
	margin 0px
h3
	margin-bottom -10px
input
	// display block
	width 30%
	padding 8px
li
	margin 5px 0px
#btnAdd
	padding 8px
	margin 0px 10px
	height 33px
	width 50px
	text-transform uppercase
#btnAdd:hover
	font-weight bold
	box-shadow 1px 1px 1px 1px #3a3a3a
#btnRemove
	margin-left 10px
	border none
	text-transform uppercase
	color white
	background-color #b20000
#btnRemove:hover
	background-color #ff0000